<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_return_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.exchange.products</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <field name="move_dest_exists" position="after">
                <separator string="Exchange Products"/>
                  <field name="product_exchange_moves" string="Exchange Products">
                    <tree editable="top">
                        <field name="product_id"  options="{'no_create': True, 'no_open': True}" force_save="1"/>
                        <field name="quantity"/>
                    </tree>
                  </field>
                <separator string="Return Products"/>
            </field>

            <xpath expr="//button[@name='create_returns']" position="replace">
                  <button name="make_exchange" string="Return/Exchange" type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
